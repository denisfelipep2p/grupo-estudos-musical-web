@model GrupoEstudosMusical.MVC.Models.AvaliacaoVM
@{
    /**/

    ViewBag.Title = "Novo";
}


<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <!-- PAGE HEADING TAG - START -->
            <h1 class="title">Criar uma Avaliação</h1><!-- PAGE HEADING TAG - END -->
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i>Home</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Avaliacao")">Avaliações</a>
                </li>

                <li class="active">
                    <strong>Nova Avaliação</strong>
                </li>
            </ol>
        </div>
    </div>

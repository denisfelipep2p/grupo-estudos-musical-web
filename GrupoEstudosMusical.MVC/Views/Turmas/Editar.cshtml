@model GrupoEstudosMusical.MVC.Models.TurmaVM
@{
    ViewBag.Title = "Editar";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <!-- PAGE HEADING TAG - START -->
            <h1 class="title">Alterar uma Turma</h1><!-- PAGE HEADING TAG - END -->
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i>Home</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Turmas")">Turmas</a>
                </li>
                <li class="active">
                    <strong>Cadastrar uma Turma</strong>
                </li>
            </ol>
        </div>
    </div>
</div>

@using (Html.BeginForm("Editar", "Turmas", FormMethod.Post, new { id = "turma_validate" }))
{
    @Html.AntiForgeryToken()
    <div class="col-lg-12">
        <section class="box ">
            <header class="panel_header">
                <h2 class="title pull-left">Informações da Turma</h2>
                <div class="actions panel_actions pull-right">
                    <a class="box_toggle fa fa-chevron-down"></a>
                    <a class="box_close fa fa-times"></a>
                </div>
            </header>
            <div class="content-body">
                @if (TempData["Mensagem"] != null && TempData["Mensagem"].ToString() != "")
                {
                    <div class="alert alert-danger alert-dismissible fade in">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                        <strong>Atenção:</strong> @TempData["Mensagem"].ToString()
                    </div>
                }
                <div class="row">
                    <div class="col-xs-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "form-label" })
                            <div class="controls">
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.DataInicio, htmlAttributes: new { @class = "form-label" })
                            <div class="controls">
                                @Html.EditorFor(model => model.DataInicio, new { htmlAttributes = new { @class = "form-control datepicker", @data_format = "dd/mm/yyyy" } })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.TerminoAula, htmlAttributes: new { @class = "form-label" })
                            <div class="controls">
                                @Html.EditorFor(model => model.TerminoAula, new { htmlAttributes = new { @class = "form-control datepicker", @data_format = "dd/mm/yyyy" } })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ModuloId, htmlAttributes: new { @class = "form-label" })
                            <div class="controls">
                                <select name="ModuloID" id="ModuloID" class="form-control m-bot15">
                                    @foreach (var modulo in ViewBag.Modulos)
                                    {
                                        <option value="@modulo.Id">@modulo.Nome</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Nivel, htmlAttributes: new { @class = "form-label" })
                            <div class="controls">
                                <select name="Nivel" id="Nivel" class="form-control m-bot15">
                                    <option value="Básico">Básico</option>
                                    <option value="Intermediário">Intermediário</option>
                                    <option value="Avançado">Avançado</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Semestre, htmlAttributes: new { @class = "form-label" })
                            <div class="controls">
                                <select name="Semestre" id="Semestre" class="form-control m-bot15">
                                    <option value="1">1º Semestre</option>
                                    <option value="2">2º Semestre</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ProfessorID, htmlAttributes: new { @class = "form-label" })
                            <div class="controls">


                                <select id="ProfessorID" name="ProfessorID" class="form-control m-bot15">
                                    @foreach (var professor in ViewBag.Professores)
                                    {
                                        <option value="@professor.Id">@professor.Nome</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Periodo, htmlAttributes: new { @class = "form-label" })
                            <div class="controls">
                                <select name="Periodo" id="Periodo" class="form-control m-bot15">
                                    @for (int i = 2000; i <= 2040; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "form-label" })
                            <div class="controls">
                                <select name="Status" id="Status" class="form-control m-bot15">
                                    <option value="Ativo">Ativa</option>
                                    <option value="Concluída">Concluída</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.QuantidadeAlunos, htmlAttributes: new { @class = "form-label" })
                            <div class="controls">
                                @Html.EditorFor(model => model.QuantidadeAlunos, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-16">

                    </div>
                    <div class="col-xs-12">
                        <div class="pull-right ">
                            <input type="submit" class="btn btn-success" value="Salvar">
                            <!-- <button type="submit" class="btn btn-success">Salvar</button> -->
                            <a type="button" class="btn" href="@Url.Action("Index", "Turmas")">Cancelar</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

}



@section Styles{
    <link href="~/Content/lib/datepicker/css/datepicker.css" rel="stylesheet" type="text/css" media="screen">
}

@section Scripts{

    <script src="~/Scripts/lib/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/lib/jquery-validation/js/additional-methods.min.js" type="text/javascript"></script>
    <script src="~/Scripts/js/form-validation.js" type="text/javascript"></script>
    <script src="~/Scripts/lib/jquery-validation/js/jquey.validate.pt-br.js" type="text/javascript"></script>
    <script src="~/Scripts/lib/datepicker/js/datepicker.js" type="text/javascript"></script>

    <script>
        $("#Nivel").val("@Html.Raw(Model.Nivel)");
        $("#ModuloID").val(@Model.ModuloId);
        $("#Semestre").val("@Html.Raw(Model.Semestre)");
        $("#ProfessorID").val(@Model.ProfessorID);
        $("#Periodo").val(@Model.Periodo);
        $("#Status").val("@Html.Raw(Model.Status)");
    </script>
}



@model GrupoEstudosMusical.MVC.Models.TurmaVM
@{
    ViewBag.Title = "Visão Geral";
}




<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Visão Geral da Turma <span style="font-weight: bold">@Model.Nome</span></h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i>Home</a>
                </li>
                <li>
                    <a href="@Url.Action("Index")">Turmas</a>
                </li>
                <li class="active">
                    <strong>Visão Geral</strong>
                </li>
            </ol>
        </div>
    </div>
</div>

@Html.Hidden("mensagem", TempData["Mensagem"])

@Html.Partial("_VisaoGeralTurma", new ViewDataDictionary { { "titulo", "Avaliações" }, { "link", @Url.Action("AvaliacoesDaTurma", "Avaliacoes", new { id = Model.Id, NomeTurma = Model.Nome }) }, { "imagem", "/Content/images/check-mark.png" }, { "alt", "avaliacoes" } })

@Html.Partial("_VisaoGeralTurma", new ViewDataDictionary { { "titulo", "Editar Turma" }, { "link", @Url.Action("Editar", "Turmas", new { id = Model.Id }) }, { "imagem", "/Content/images/document.png" }, { "alt", "Editar Turmas" } })

@Html.Partial("_VisaoGeralTurma", new ViewDataDictionary { { "titulo", "Lançar Notas" }, { "link", @Url.Action("LancarNotas", "Turmas", new { Id = Model.Id }) }, { "imagem", "/Content/images/notebook.png" }, { "alt", "Lançar Notas" } })

<div class="col-xs-12 col-md-6 col-lg-3" id="recalculoAcademico">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title texto-centralizado">Recálculo acadêmico</h2>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    <div class="imagem-centralizada">
                        <a href="#" onclick="EfetuarRecalculoAcademico(@Model.Id)">
                            <img src="~/Content/images/reload.png" alt="Recálculo acadêmico" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section styles {
    <link href="~/Content/lib/messenger/messenger.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/Content/lib/messenger/messenger-theme-future.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/Content/lib/messenger/messenger-theme-flat.css" rel="stylesheet" type="text/css" media="screen" />
}

@section scripts {

    <script>
        function EfetuarRecalculoAcademico(Id) {
            $.ajax({
                type: "POST",
                url: document.location.origin + "/Turmas/RecalculoAcademico",
                data: { Id },
                success: function (retorno) {
                    if (retorno.result) {
                        swal("Sucesso", "Recálculo acadêmico realizado com sucesso!", "success");
                    } else {
                        swal("Atenção!", "Ocorreu um erro", "error");
                    }
                },
                error: function (xhr, textStatus, errorThrown) {
                    // TODO: Show error

                    alert(errorThrown);
                }
            });
        }

    </script>
    <script src="~/Scripts/lib/messenger/messenger.min.js" type="text/javascript"></script>
    <script src="~/Scripts/lib/messenger/messenger-theme-future.js" type="text/javascript"></script>
    <script src="~/Scripts/lib/messenger/messenger-theme-flat.js" type="text/javascript"></script>
    <script src="~/Scripts/js/messenger.js" type="text/javascript"></script>
    <script src="~/Scripts/js/visao-geral-aluno.js"></script>
}

@model List<GrupoEstudosMusical.MVC.Models.AvaliacaoVM>
@{
    ViewBag.Title = "_ListaAvaliacoes";
}

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Lista de Avaliações</h2>
            <div class="actions panel_actions pull-right">
                <a class="box_toggle fa fa-chevron-down"></a>
                <a class="box_close fa fa-times"></a>
            </div>
        </header>
        <div class="content-body">
            @Html.Partial("_MensagemSucesso")
            <div class="row">
                <div class="col-xs-12">
                    <table id="example-1" class="table table-striped dt-responsive display">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Nota máxima</th>
                                <th>Peso</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Nome</th>
                                <th>Nota máxima</th>
                                <th>Peso</th>
                                <th>Ações</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var model in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(item => model.Nome)</td>
                                    <td>@Html.DisplayFor(item => model.NotaMaxima)</td>
                                    <td>@Html.DisplayFor(item => model.Peso)</td>

                                    <td style="width: 160px">
                                        @Html.ActionLink("Editar", "Editar", "Avaliacoes", new { Id = model.Id }, new { @class = "btn btn-primary" })

                                        <a class="btn btn-danger" data-toggle="modal" href="#section-settings"
                                           onclick="apagar(this, '@(model.Id)', '@(model.Nome)')">Apagar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

<div class="modal" id="section-settings" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog animated bounceInDown">
        <div class="modal-content">
            @using (Html.BeginForm("Deletar", "Avaliacoes"))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Deletar Avaliação</h4>
                </div>
                <div class="modal-body">
                    Deseja realmente deletar a avaliação?
                    <input type="hidden" name="Id" id="Id">
                </div>
                <div class="modal-footer">
                    <button data-dismiss="modal" class="btn btn-default" type="button">Não</button>
                    <button class="btn btn-danger" type="submit">Sim</button>
                </div>
            }
        </div>
    </div>
</div>


@model GrupoEstudosMusical.MVC.Models.ChamadaVM

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Informações da Chamada</h2>
            <div class="actions panel_actions pull-right">
                <a class="box_toggle fa fa-chevron-down"></a>
                <a class="box_close fa fa-times"></a>
            </div>
        </header>
        <div class="content-body">
            @Html.HiddenFor(model => model.IdTurma)
            @Html.Partial("_MensagemErro")
            <div class="row">
                <div class="col-xs-6">
                    <div class="input-group primary">
                        <span class="input-group-addon">
                            <span class="arrow"></span>
                            <i class="fa fa-mortar-board"></i>
                        </span>
                        @Html.EditorFor(model => model.Turma.Nome, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="input-group primary">
                        <span class="input-group-addon">
                            <span class="arrow"></span>
                            <i class="fa fa-calendar-o"></i>
                        </span>
                        @Html.EditorFor(model => model.DataCadastro, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Observacao, htmlAttributes: new { @class = "form-label" })
                        <div class="controls">
                            @{
                                var htmlAttrs = new Dictionary<string, object>();
                                htmlAttrs.Add("class", "form-control");
                                htmlAttrs.Add("rows", "3");
                                if (Url.RouteUrl(ViewContext.RouteData.Values).Contains("Detalhes"))
                                {
                                    htmlAttrs.Add("readonly", "");
                                }
                            }
                            @Html.TextAreaFor(model => model.Observacao, 3, 0, htmlAttrs)
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
</div>


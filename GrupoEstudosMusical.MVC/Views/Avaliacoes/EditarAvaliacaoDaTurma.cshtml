@model GrupoEstudosMusical.MVC.Models.AvaliacaoTurmaVM
@{
    ViewBag.Title = "Editar Avaliacao";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <!-- PAGE HEADING TAG - START -->
            <h1 class="title">Editar Avaliação da Turma @Model.Turma.Nome </h1><!-- PAGE HEADING TAG - END -->
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i>Home</a>
                </li>
                <li>
                    <a href="@Url.Action("AvaliacoesDaTurma", "Avaliacoes", new { Id = Model.TurmaID, NomeTurma = Model.Turma.Nome})">Avaliações</a>
                </li>

                <li class="active">
                    <strong>Editar Avaliação</strong>
                </li>
            </ol>
        </div>
    </div>
</div>

@using (Html.BeginForm("EditarAvaliacaoDaTurma", "Avaliacoes", FormMethod.Post, new { id = "avaliacaoturma_validate" }))
{
    @Html.AntiForgeryToken()
    <div class="col-lg-12">
        <section class="box ">
            <header class="panel_header">
                <h2 class="title pull-left">Informações da Avaliação da Turma</h2>
                <div class="actions panel_actions pull-right">
                    <a class="box_toggle fa fa-chevron-down"></a>
                    <a class="box_close fa fa-times"></a>
                </div>
            </header>
            <div class="content-body">
                @Html.Partial("_MensagemErro")
                @Html.HiddenFor(a => a.TurmaID)
                @Html.HiddenFor(a => a.Turma.Nome)
                @Html.HiddenFor(a => a.DataPrevista)
                @Html.HiddenFor(a => a.AvaliacaoID)
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-label">Avaliação</label>
                            <div class="controls">
                                @Html.DropDownListFor(m => m.AvaliacaoID, new SelectList(Model.AvaliacoesDisponiveis, "Id", "Nome"), new { @class = "form-control m-bot15", @disabled="true" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.DataRealizacao, htmlAttributes: new { @class = "form-label" })
                            <div class="controls">
                                @Html.EditorFor(model => model.DataRealizacao, new { htmlAttributes = new { @class = "form-control datepicker", @data_format = "dd/mm/yyyy" } })
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12">
                        <div class="pull-right ">
                            <input type="submit" class="btn btn-success" value="Salvar">

                            <a type="button" class="btn" href="@Url.Action("AvaliacoesDaTurma", "Avaliacoes", new { Id = Model.TurmaID })">Cancelar</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

}

@section Styles{
    <link href="~/Content/lib/datepicker/css/datepicker.css" rel="stylesheet" type="text/css" media="screen">
}

@section Scripts{
  
    <script src="~/Scripts/lib/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/lib/jquery-validation/js/additional-methods.min.js" type="text/javascript"></script>
    <script src="~/Scripts/js/form-validation.js" type="text/javascript"></script>
    <script src="~/Scripts/lib/jquery-validation/js/jquey.validate.pt-br.js" type="text/javascript"></script>
    <script src="~/Scripts/lib/datepicker/js/datepicker.js" type="text/javascript"></script>

}

